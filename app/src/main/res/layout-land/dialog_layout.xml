<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/TextSize20"
                    android:text="@string/riktig_svar" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/TextSize20"
                    android:text="@string/ditt_svar" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/dialogRiktigSvar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="@dimen/TextSize20"
                    android:text="@string/tallPlaceholder" />
                <TextView
                    android:id="@+id/dialogDittSvar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="@dimen/TextSize20"
                    android:text="@string/tallPlaceholder" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/dialogBilde"
            android:contentDescription="@string/dialog_bilde"
            android:layout_marginTop="@dimen/Margin16"
            android:layout_marginBottom="@dimen/Margin16"
            android:layout_width="@dimen/ImageSize32"
            android:layout_height="@dimen/ImageSize32"
            android:layout_gravity="center"
            android:src="@drawable/kitty_thinking"
            />

        <TextView
            android:id="@+id/dialogTekstOversikt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/TextSize24"
            android:text=""
            />

    </LinearLayout>

</LinearLayout>